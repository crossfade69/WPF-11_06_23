<Window x:Class="WpfProjekt.EditProfWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProjekt"
        mc:Ignorable="d"
        Title="EditProfWindow" Height="300" Width="600">
    <Grid Background="#FF2D2D2D">
        <!-- Profile Information -->
        <StackPanel HorizontalAlignment="Stretch" Margin="0,20,0,0" Width="590">
            <TextBox Name="usernameValue" Text="" FontSize="20" FontWeight="Bold" Width="560" />
            <TextBox Name="loginValue" Text="" Margin="0,10,0,0" Width="560"/>
            <TextBox Name="passwordValue" Text="" Margin="0,10,0,0" Width="560"/>

        </StackPanel>

        <StackPanel HorizontalAlignment="Right" Margin="0,20,20,0">
            <Button Content="Edit Profile" Width="100" Margin="0,150,0,0" Click="Edit_Click"/>
        </StackPanel>
    </Grid>
</Window>
